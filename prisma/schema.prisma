// Prisma Schema für Multi-Tenant SaaS System
// Enthält: User, Shop (Tenant), Customer, Appointment, Employee

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Benutzer-Modell mit Rollen (Admin, Mitarbeiter)
model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String // Gehashtes Passwort
  name      String?
  role      Role     @default(MITARBEITER) // Admin oder Mitarbeiter
  tenantId  String? // Referenz zur Firma (Shop)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Beziehungen
  shop               Shop?           @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  employee           Employee?
  taskComments       TaskComment[] // Kommentare die der User erstellt hat
  tasksAssigned      Task[]          @relation("TaskAssignee") // Aufgaben die dem User zugewiesen sind
  invitationsCreated Invitation[]    @relation("InvitationCreator") // Einladungen die der User erstellt hat
  invitationsUsed    Invitation[]    @relation("InvitationUsedBy") // Einladungen die der User verwendet hat
  sentMessages       Message[]       @relation("SentMessages") // Nachrichten die der User gesendet hat
  receivedMessages   Message[]       @relation("ReceivedMessages") // Nachrichten die der User empfangen hat
  channelMemberships ChannelMember[] @relation("ChannelMembers") // Channel-Mitgliedschaften

  @@index([tenantId])
  @@index([email])
}

// Firma/Tenant-Modell
model Shop {
  id        String   @id @default(cuid())
  name      String
  tenantId  String   @unique // Eindeutige Tenant-ID
  address   String?
  phone     String?
  email     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Beziehungen
  users             User[]
  customers         Customer[]
  employees         Employee[]
  appointments      Appointment[]
  invitations       Invitation[] // Einladungen für diesen Tenant
  expenses          Expense[] // Ausgaben für diesen Tenant
  recurringExpenses RecurringExpense[] // Daueraufträge für diesen Tenant
  inventoryItems    InventoryItem[] // Inventar-Artikel für diesen Tenant
  chatChannels      ChatChannel[] // Chat-Kanäle für diesen Tenant
  dailyReports      DailyReport[] // Tägliche Chef-Berichte

  @@index([tenantId])
}

// Kunden-Modell (gehört zu einem Tenant)
model Customer {
  id         String   @id @default(cuid())
  firstName  String
  lastName   String
  email      String?
  phone      String?
  address    String?
  notes      String? // Notizen zum Kunden
  tags       String[] @default([]) // Tags: VIP, Problemkunde, No-Show, Neu, etc.
  isArchived Boolean  @default(false) // Archiviert statt gelöscht
  tenantId   String // Referenz zur Firma
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  // Beziehungen
  shop         Shop          @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  appointments Appointment[]

  @@index([tenantId])
  @@index([email])
  @@index([isArchived])
  @@index([tags])
}

// Mitarbeiter-Modell (Verknüpfung User <-> Shop)
model Employee {
  id             String         @id @default(cuid())
  userId         String         @unique
  tenantId       String // Referenz zur Firma
  position       String? // Position/Abteilung
  color          String? // Farbe im Kalender (Hex-Code, z.B. #3B82F6)
  isActive       Boolean        @default(true) // Aktiv/Inaktiv
  active         Boolean        @default(true) // Alias für isActive (für Kompatibilität)
  workHours      Json? // Arbeitszeiten: { monday: { start: "09:00", end: "17:00" }, ... }
  employmentType EmploymentType @default(FULL_TIME)
  salaryType     SalaryType     @default(FIXED)
  baseSalary     Float? // Monatliches Grundgehalt (veraltet, verwende salary)
  salary         Float? // Bruttogehalt (nullable, kein Default)
  hourlyRate     Float? // Stundenlohn
  commissionRate Float? // Provisionssatz (in Prozent)
  payoutDay      Int? // Auszahlungstag im Monat (1-31, nullable)

  // --- Profil ---
  avatarUrl String? // Profilbild-URL
  phone     String? // Telefonnummer
  bio       String? // Kurzbeschreibung

  // --- Arbeitszeiten ---
  workStart  String? // "09:00"
  workEnd    String? // "18:00"
  breakStart String? // "12:00"
  breakEnd   String? // "13:00"
  daysOff    String[] @default([]) // z.B. ["Sunday", "Monday"]

  // --- Urlaub & Krankheit ---
  vacationDaysTotal Int?      @default(25) // Gesamtjahresurlaub
  vacationDaysUsed  Int?      @default(0) // Verbraucht
  sickDays          Int?      @default(0) // Anzahl Krankheitstage
  isSick            Boolean   @default(false) // Aktuell krank
  nextAvailableDate DateTime? // Cache für Performance
  leaveReason       String? // z.B. "Urlaub", "Fortbildung", "Unbezahlt"

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Beziehungen
  user              User               @relation(fields: [userId], references: [id], onDelete: Cascade)
  shop              Shop               @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  appointments      Appointment[]
  expenses          Expense[] // Ausgaben die dem Mitarbeiter zugeordnet sind
  recurringExpenses RecurringExpense[] // Daueraufträge für Gehälter
  vacationRequests  VacationRequest[] // Urlaubsanträge

  @@index([tenantId])
  @@index([userId])
  @@index([isActive])
  @@index([active])
  @@index([isSick])
}

// Termin-Modell
model Appointment {
  id          String            @id @default(cuid())
  title       String
  description String?
  notes       String? // Termin-Notizen
  startTime   DateTime
  endTime     DateTime
  status      AppointmentStatus @default(OPEN)
  price       Decimal           @default(0) @db.Decimal(10, 2) // Preis/Umsatz (Standard: 0)
  color       String? // Farbe nach Status (Hex-Code)
  tenantId    String // Referenz zur Firma
  customerId  String? // Optional: Kunde
  employeeId  String? // Optional: Mitarbeiter
  createdAt   DateTime          @default(now())
  updatedAt   DateTime          @updatedAt

  // Beziehungen
  shop     Shop      @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  customer Customer? @relation(fields: [customerId], references: [id], onDelete: SetNull)
  employee Employee? @relation(fields: [employeeId], references: [id], onDelete: SetNull)

  @@index([tenantId])
  @@index([employeeId])
  @@index([customerId])
  @@index([startTime])
  @@index([status])
}

// Aufgaben-Modell (für Dashboard)
model Task {
  id             String        @id @default(cuid())
  title          String
  description    String?
  status         TaskStatus    @default(TODO)
  priority       TaskPriority  @default(MEDIUM)
  tenantId       String // Referenz zur Firma
  assignedTo     String? // User-ID
  dueDate        DateTime? // Alias für deadline (Kompatibilität)
  deadline       DateTime? // Deadline für die Aufgabe
  comments       TaskComment[] // Kommentare zur Aufgabe
  assignedToUser User?         @relation("TaskAssignee", fields: [assignedTo], references: [id], onDelete: SetNull)
  createdAt      DateTime      @default(now())
  updatedAt      DateTime      @updatedAt

  @@index([tenantId])
  @@index([assignedTo])
  @@index([status])
}

// Task-Kommentare
model TaskComment {
  id        String   @id @default(cuid())
  taskId    String
  userId    String // User der den Kommentar erstellt hat
  content   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Beziehungen
  task Task @relation(fields: [taskId], references: [id], onDelete: Cascade)
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([taskId])
  @@index([userId])
}

// Rollen-Enum
enum Role {
  ADMIN
  MITARBEITER
}

// Termin-Status-Enum
enum AppointmentStatus {
  OPEN // Offen
  ACCEPTED // Angenommen
  CANCELLED // Storniert
  RESCHEDULED // Verschoben
  COMPLETED // Abgeschlossen (für Historie)
  NEEDS_REASSIGNMENT // Muss neu zugewiesen werden (z.B. bei Krankheit)
}

// Aufgaben-Status-Enum
enum TaskStatus {
  TODO // To-Do
  IN_PROGRESS // In Bearbeitung
  DONE // Erledigt
  CANCELLED // Abgebrochen
}

// Aufgaben-Priorität-Enum
enum TaskPriority {
  LOW
  MEDIUM
  HIGH
  URGENT
}

// Beschäftigungsart-Enum
enum EmploymentType {
  FULL_TIME // Vollzeit
  PART_TIME // Teilzeit
  MINI_JOB // Minijob
  FREELANCER // Freelancer
}

// Gehaltsart-Enum
enum SalaryType {
  FIXED // Festgehalt
  HOURLY // Stundenlohn
  COMMISSION // Provision
  MIXED // Gemischt (Festgehalt + Provision)
}

// Wiederkehrende Intervalle für Ausgaben
enum RecurringInterval {
  DAILY
  WEEKLY
  MONTHLY
  YEARLY
}

// Ausgaben-Kategorien ENUM
enum ExpenseCategory {
  GEHALT
  MIETE
  MARKETING
  MATERIAL
  VERSICHERUNG
  STEUERN
  SONSTIGES
}

// Dauerauftrag-Modell (Recurring Expense)
model RecurringExpense {
  id          String            @id @default(cuid())
  tenantId    String // Referenz zur Firma
  name        String
  amount      Decimal           @db.Decimal(10, 2)
  category    ExpenseCategory // ENUM für Kategorien
  interval    RecurringInterval @default(MONTHLY)
  startDate   DateTime
  nextRun     DateTime // Nächstes Ausführungsdatum
  description String?
  isActive    Boolean           @default(true)
  employeeId  String? // Optional: Mitarbeiter-ID für Gehalts-Daueraufträge
  dayOfMonth  Int? // Optional: Tag im Monat für monatliche Ausführung (1-31)
  createdAt   DateTime          @default(now())
  updatedAt   DateTime          @updatedAt

  // Beziehungen
  shop     Shop      @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  employee Employee? @relation(fields: [employeeId], references: [id], onDelete: Cascade)
  expenses Expense[] // Alle generierten Ausgaben aus diesem Dauerauftrag

  @@index([tenantId])
  @@index([nextRun])
  @@index([isActive])
  @@index([category])
  @@index([employeeId])
}

// Ausgaben-Modell (Finanzmodul)
model Expense {
  id                 String          @id @default(cuid())
  tenantId           String // Referenz zur Firma
  name               String // Name der Ausgabe
  amount             Decimal         @db.Decimal(10, 2)
  date               DateTime
  category           ExpenseCategory // ENUM für Kategorien
  description        String?
  employeeId         String? // Optional: Mitarbeiter dem die Ausgabe zugeordnet ist
  recurringExpenseId String? // Optional: Referenz zum Dauerauftrag
  invoiceUrl         String? // Optional: URL zum hochgeladenen Dokument
  createdAt          DateTime        @default(now())
  updatedAt          DateTime        @updatedAt

  // Beziehungen
  shop             Shop              @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  employee         Employee?         @relation(fields: [employeeId], references: [id], onDelete: SetNull)
  recurringExpense RecurringExpense? @relation(fields: [recurringExpenseId], references: [id], onDelete: SetNull)

  @@index([tenantId])
  @@index([employeeId])
  @@index([date])
  @@index([category])
  @@index([recurringExpenseId])
}

// Einladungs-Modell für Multi-Tenant Invite-System
model Invitation {
  id        String    @id @default(cuid())
  token     String    @unique // Eindeutiger Invite-Token
  email     String? // Optional: Email des Eingeladenen
  tenantId  String // Referenz zur Firma
  role      Role      @default(MITARBEITER) // Rolle die vergeben wird
  expiresAt DateTime // Ablaufdatum der Einladung
  used      Boolean   @default(false) // Wurde die Einladung bereits verwendet?
  usedBy    String? // User-ID der die Einladung verwendet hat
  usedAt    DateTime? // Wann wurde die Einladung verwendet
  createdBy String // User-ID des Admins der die Einladung erstellt hat
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  // Beziehungen
  shop       Shop  @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  creator    User  @relation("InvitationCreator", fields: [createdBy], references: [id], onDelete: Cascade)
  usedByUser User? @relation("InvitationUsedBy", fields: [usedBy], references: [id], onDelete: SetNull)

  @@index([token])
  @@index([tenantId])
  @@index([email])
  @@index([used])
  @@index([expiresAt])
}

// Inventar-Modell
model InventoryItem {
  id           String   @id @default(cuid())
  tenantId     String // Referenz zur Firma
  name         String
  quantity     Int      @default(0)
  minThreshold Int      @default(0)
  category     String?
  pricePerUnit Float?
  link         String? // Optional: Link zum Produkt
  manufacturer String? // Optional: Firma/Hersteller
  lastUpdated  DateTime @default(now())
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  // Beziehungen
  shop Shop @relation(fields: [tenantId], references: [id], onDelete: Cascade)

  @@index([tenantId])
  @@index([category])
}

// Chat-Modelle
model Message {
  id         String   @id @default(cuid())
  senderId   String
  receiverId String? // Für Einzelchat
  channelId  String? // Für Gruppenchat
  content    String
  createdAt  DateTime @default(now())
  read       Boolean  @default(false)
  tenantId   String // Multi-Tenant Filter

  // Beziehungen
  sender   User         @relation("SentMessages", fields: [senderId], references: [id], onDelete: Cascade)
  receiver User?        @relation("ReceivedMessages", fields: [receiverId], references: [id], onDelete: Cascade)
  channel  ChatChannel? @relation(fields: [channelId], references: [id], onDelete: Cascade)

  @@index([senderId])
  @@index([receiverId])
  @@index([channelId])
  @@index([tenantId])
  @@index([createdAt])
}

model ChatChannel {
  id          String   @id @default(cuid())
  name        String
  description String? // Beschreibung des Channels
  tenantId    String // Referenz zur Firma
  isSystem    Boolean  @default(false) // System-Channel (z.B. Teamchat) kann nicht gelöscht werden
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  createdBy   String? // User-ID des Erstellers

  // Beziehungen
  shop     Shop            @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  messages Message[]
  members  ChannelMember[]

  @@index([tenantId])
  @@index([isSystem])
}

model ChannelMember {
  id        String   @id @default(cuid())
  channelId String
  userId    String
  joinedAt  DateTime @default(now())

  // Beziehungen
  channel ChatChannel @relation(fields: [channelId], references: [id], onDelete: Cascade)
  user    User        @relation("ChannelMembers", fields: [userId], references: [id], onDelete: Cascade)

  @@unique([channelId, userId])
  @@index([channelId])
  @@index([userId])
}

// Urlaubsantrag-Modell
model VacationRequest {
  id         String   @id @default(cuid())
  employeeId String
  employee   Employee @relation(fields: [employeeId], references: [id], onDelete: Cascade)

  startDate   DateTime
  endDate     DateTime
  days        Int // Anzahl der Urlaubstage
  leaveReason String   @default("Urlaub") // Art des Urlaubs: "Urlaub", "Fortbildung", "Unbezahlt", etc.

  status String  @default("PENDING") // PENDING | APPROVED | DENIED
  reason String? // Optional: Grund für Ablehnung

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([employeeId])
  @@index([status])
  @@index([startDate])
  @@index([endDate])
}

// Täglicher Chef-Bericht
model DailyReport {
  id         String   @id @default(cuid())
  tenantId   String // Referenz zur Firma
  reportDate DateTime @default(now()) // Datum des Berichts (heute)
  reportData Json // Vollständiger Bericht als JSON
  createdAt  DateTime @default(now())

  // Beziehungen
  shop Shop @relation(fields: [tenantId], references: [id], onDelete: Cascade)

  @@unique([tenantId, reportDate])
  @@index([tenantId])
  @@index([reportDate])
}
