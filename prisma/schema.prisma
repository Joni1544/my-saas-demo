// Prisma Schema für Multi-Tenant SaaS System
// Enthält: User, Shop (Tenant), Customer, Appointment, Employee

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Benutzer-Modell mit Rollen (Admin, Mitarbeiter)
model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String   // Gehashtes Passwort
  name      String?
  role      Role     @default(MITARBEITER) // Admin oder Mitarbeiter
  tenantId  String?  // Referenz zur Firma (Shop)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Beziehungen
  shop      Shop?      @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  employee  Employee?
  taskComments TaskComment[] // Kommentare die der User erstellt hat

  @@index([tenantId])
  @@index([email])
}

// Firma/Tenant-Modell
model Shop {
  id          String   @id @default(cuid())
  name        String
  tenantId    String   @unique // Eindeutige Tenant-ID
  address     String?
  phone       String?
  email       String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Beziehungen
  users       User[]
  customers   Customer[]
  employees   Employee[]
  appointments Appointment[]

  @@index([tenantId])
}

// Kunden-Modell (gehört zu einem Tenant)
model Customer {
  id          String   @id @default(cuid())
  firstName   String
  lastName    String
  email       String?
  phone       String?
  address     String?
  notes       String?  // Notizen zum Kunden
  tags        String[] @default([]) // Tags: VIP, Problemkunde, No-Show, Neu, etc.
  isArchived  Boolean  @default(false) // Archiviert statt gelöscht
  tenantId    String   // Referenz zur Firma
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Beziehungen
  shop        Shop          @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  appointments Appointment[]

  @@index([tenantId])
  @@index([email])
  @@index([isArchived])
  @@index([tags])
}

// Mitarbeiter-Modell (Verknüpfung User <-> Shop)
model Employee {
  id          String   @id @default(cuid())
  userId      String   @unique
  tenantId    String   // Referenz zur Firma
  position    String?  // Position/Abteilung
  color       String?  // Farbe im Kalender (Hex-Code, z.B. #3B82F6)
  isActive    Boolean  @default(true) // Aktiv/Inaktiv
  workHours   Json?    // Arbeitszeiten: { monday: { start: "09:00", end: "17:00" }, ... }
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Beziehungen
  user        User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  shop        Shop          @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  appointments Appointment[]

  @@index([tenantId])
  @@index([userId])
  @@index([isActive])
}

// Termin-Modell
model Appointment {
  id          String   @id @default(cuid())
  title       String
  description String?
  notes       String?  // Termin-Notizen
  startTime   DateTime
  endTime     DateTime
  status      AppointmentStatus @default(OPEN)
  price       Decimal? @db.Decimal(10, 2) // Preis/Umsatz
  color       String?  // Farbe nach Status (Hex-Code)
  tenantId    String   // Referenz zur Firma
  customerId  String?  // Optional: Kunde
  employeeId  String?  // Optional: Mitarbeiter
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Beziehungen
  shop        Shop      @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  customer    Customer? @relation(fields: [customerId], references: [id], onDelete: SetNull)
  employee    Employee? @relation(fields: [employeeId], references: [id], onDelete: SetNull)

  @@index([tenantId])
  @@index([employeeId])
  @@index([customerId])
  @@index([startTime])
  @@index([status])
}

// Aufgaben-Modell (für Dashboard)
model Task {
  id          String   @id @default(cuid())
  title       String
  description String?
  status      TaskStatus @default(TODO)
  priority    TaskPriority @default(MEDIUM)
  tenantId    String   // Referenz zur Firma
  assignedTo  String?  // User-ID
  dueDate     DateTime?
  comments    TaskComment[] // Kommentare zur Aufgabe
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([tenantId])
  @@index([assignedTo])
  @@index([status])
}

// Task-Kommentare
model TaskComment {
  id        String   @id @default(cuid())
  taskId    String
  userId    String   // User der den Kommentar erstellt hat
  content   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Beziehungen
  task      Task     @relation(fields: [taskId], references: [id], onDelete: Cascade)
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([taskId])
  @@index([userId])
}

// Rollen-Enum
enum Role {
  ADMIN
  MITARBEITER
}

// Termin-Status-Enum
enum AppointmentStatus {
  OPEN        // Offen
  ACCEPTED    // Angenommen
  CANCELLED   // Storniert
  RESCHEDULED // Verschoben
  COMPLETED   // Abgeschlossen (für Historie)
}

// Aufgaben-Status-Enum
enum TaskStatus {
  TODO        // To-Do
  IN_PROGRESS // In Bearbeitung
  DONE        // Erledigt
  CANCELLED   // Abgebrochen
}

// Aufgaben-Priorität-Enum
enum TaskPriority {
  LOW
  MEDIUM
  HIGH
  URGENT
}

